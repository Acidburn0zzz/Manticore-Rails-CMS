%section
  %h1 Manage Users
  %table{ cellpadding: 0, cellspacing: 0 }
    %thead
      %tr
        %th Username
        %th Email
        %th Registered
        %th Role
        %th Actions
    %tbody
      - @users.each do |user|
        %tr
          %td= link_to user.full_name, user
          %td= user.email
          %td= user.created_at.to_date
          %td= user.roles.join(', ').titleize unless user.roles.first.nil?
          %td
            %a.yellow.button.mini{ href: edit_user_path(user) } edit
            %a.red.button.mini{ href: user_path(user), data: { confirm: "Are you sure you want to delete?", method: :delete } } delete